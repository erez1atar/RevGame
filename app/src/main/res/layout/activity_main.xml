<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/main_backgound"
    android:orientation="vertical"
    tools:context=".Presention.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/main_backgound"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="One player"
            android:textSize="20dp"
            android:paddingLeft="30dip"
            android:drawableLeft="@drawable/main_1_player"
            android:textColor="@android:color/black"
            android:background="@drawable/button_style_2"
            android:id="@+id/computerButton" />
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Two players"
            android:textSize="20dp"
            android:paddingLeft="30dip"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/main_2_players"
            android:id="@+id/buttonStart"
            android:background="@drawable/button_syle"
            android:layout_gravity="center_horizontal"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Join game(WIFI)"
            android:paddingLeft="30dip"
            android:drawableLeft="@drawable/main_2_connection"
            android:background="@drawable/button_style_2"
            android:id="@+id/JoinGame"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Host game(WIFI)"
            android:paddingLeft="30dip"
            android:drawableLeft="@drawable/main_2_connection"
            android:textColor="@android:color/white"
            android:background="@drawable/button_syle"
            android:id="@+id/hostButton"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:layout_weight="0.15"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Levels"
            android:textSize="20dp"
            android:paddingLeft="30dip"
            android:background="@drawable/button_style_2"
            android:drawableLeft="@drawable/main_levels"
            android:drawableRight="@drawable/new_1"
            android:id="@+id/levelButton"/>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="20dp"
            android:layout_weight="0.3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textSize="20dp"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:drawableLeft="@drawable/google_play"
            android:drawableRight="@drawable/google_play"
            android:text="Rate Us"
            android:textColor="@android:color/white"
            android:background="@drawable/button_syle"
            android:id="@+id/rate_us_btn"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Credits"
            android:textSize="20dp"
            android:background="@drawable/button_style_2"
            android:id="@+id/creditsButton"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:background="@drawable/circle_black_x"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="60sp"
            android:id="@+id/reversi"
            android:textAlignment="center"
            android:text="Reversi"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:background="@drawable/circle_white_x"/>

    </LinearLayout>

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:text="Help"-->
        <!--android:id="@+id/helpButton"/>-->

</LinearLayout>
