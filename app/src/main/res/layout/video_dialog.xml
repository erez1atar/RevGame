<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_gridient"
    android:orientation="horizontal" android:layout_width="350dp"
    android:layout_height="180dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:src="@drawable/video"
        android:scaleY="0.65"
        android:scaleX="0.65"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/watch_video_text"
            android:text="Watch Video To\n Get 3 Moves Back"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/video_dialog_skip_btn"
                android:text="Skip"
                android:layout_weight="1"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/video_dialog_watch_btn"
                android:text="watch"
                android:layout_weight="1"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>